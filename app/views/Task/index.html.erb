<h2>タスク一覧</h2>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>

    <td><%= link_to "編集", edit_task_path(task.id)
    <td><%= link_to "削除", task_path(task.id), method: :delete, date: {confirm: '本当に削除して良いですか？'} %></td>
  </tr>