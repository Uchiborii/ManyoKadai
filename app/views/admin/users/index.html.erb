<%= link_to '新規ユーザー登録', new_admin_user_path %>
</div>

<div class="admin_index">
  <table>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <td>タスク数: <%= user.tasks.count %></td>
        <td>
        <%= link_to '編集・削除', edit_admin_user_path(user.id) %>
        </td>
      </tr>
      <rb>
    <% end %>
  </table>
</div>
