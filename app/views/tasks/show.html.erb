<div class="container text-center">
<h2>タスク詳細</h2>

<%= notice %>

<table class="table mx-auto">
    <tbody>
      <tr>
        <th>タイトル：</th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th>内容：</th>
        <td><%= @task.content %></td>
      </tr>
      <tr>
      <th>ラベル</th>
        <% @task.labels.each do |label| %>
        <td><%= label.name %></td>
        <%end%>
      </tr>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary' %>
    <%= link_to '戻る', tasks_path, class: 'btn btn-secondary' %>
  </div>